doctype html
head
    meta(charset='UTF-8')  
    title Contact Us 
    meta(name='viewport', content='width=device-width, initial-scale=1.0')  
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css')      
    link(rel='stylesheet', type='text/css', href='../stylesheets/contact.css')
  body
    .container
      .row.header
        h1 CONTACT US &nbsp;
        |     
        h3 Fill out the form
      |   
      .row.body
        form(method='post', action='contact/send')
          ul
            li
              p.left
                label(for='first_name') first name
                |             
                input(type='text', name='first_name', placeholder='John')
              |           
              p.pull-right
                label(for='last_name') last name
                |             
                input(type='text', name='last_name', placeholder='Smith')
            |         
            |         
            li
              p
                label(for='email')
                  | email 
                  span.req *
                |             
                input(type='email', name='email', placeholder='john.smith@gmail.com')
            |         
            |         
            li
              .divider
            |         
            li
              label(for='comments') comments or suggestions
              |           
              textarea(cols='46', rows='3', name='message')
            |         
            |         
            li
              input.btn.btn-submit(type='submit', value='Submit')  
              a.btn.btn(href="/") Cancel
              
