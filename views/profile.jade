doctype html
html
  title #{item.product}
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='stylesheet', href='https://www.w3schools.com/w3css/3/w3.css')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  link(rel='stylesheet', href='../stylesheets/css/button.css')
  script(src='../javascripts/main.js', type='text/javascript')
  style.
    html,body,h1,h2,h3,h4,h5,h6 {font-family: "Roboto", sans-serif}
  body.w3-light-grey
    #fb-root
    // Page Container
    .w3-content.w3-margin-top(style='max-width:1400px;')
      // The Grid
      .w3-row-padding
        // Left Column
        .w3-third
          .w3-white.w3-text-grey.w3-card-4
            .w3-display-container
              img(src='#{item.image}', style='width:100%')
              .w3-display-bottomleft.w3-container.w3-text-black
                h2 #{item.product}
            .w3-container
              hr
              p.w3-large
                b
                  i.fa.fa-info.fa-fw.w3-margin-right.w3-text-teal
                  | Item Description
              p #{item.description}
              br
              p #{item.description1}
              br
              p #{item.description2}
              br
              p #{item.description3}


          // End Left Column
        // Right Column
        .w3-twothird
          .w3-container.w3-card-2.w3-white.w3-margin-bottom
            h2.w3-text-grey.w3-padding-16
              i.fa.fa-dollar.fa-fw.w3-margin-right.w3-xxlarge.w3-text-teal
              | #{item.price}
              a(href='/items')
                button.button Back to list
            h2.w3-text-grey.w3-padding-16
              i.fa.fa-map.fa-fw.w3-margin-right.w3-xxlarge.w3-text-teal
              | You can buy this at
              br
              | #{item.shop}
              br
              img(src='https://github.com/Rjycpnsdl/eprice-t9/blob/master/images/map.JPG?raw=true', style='width:50%')
            .fb-comments(data-href='http://eprice-t9.herokuapp.com/profile/#{item.id}', data-numposts='5',data-width="100", data-colorscheme='light')
        script.
          (function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.8";
          fjs.parentNode.insertBefore(js, fjs);
          }(document,'script','facebook-jssdk'));
          // End Right Column
        // End Grid
      // End Page Container
    footer.w3-container.w3-teal.w3-center.w3-margin-top
      p Copyright 2017 All rights reserved. Team 9
      i.fa.fa-facebook-official.w3-hover-text-indigo.w3-larg
      br
      Team-9