doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title e-PRICE CHECK Mo! - The online electrical components price checking
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
    link(rel='stylesheet', type='text/css', href='../stylesheets/bulma.css')
    link(rel='stylesheet', type='text/css', href='../stylesheets/landing.css')
  body
    section.hero.is-fullheight.is-dark
      .hero-head
        .container
          nav.nav
            .container
              .nav-left
                a.nav-item(href='/')
                  img(src='https://cdn4.iconfinder.com/data/icons/rounded-solid-outline-shopping-e-commerce-icons-se/144/Check_prices_Rounded_Solid-512.png', alt='Description')
              span.nav-toggle
                span
                span
                span
              .nav-right.nav-menu
              if (user) 
                span.nav-item
                  a.nav-item
                    | You are logged in as #{user.username}
                  a.button.is-default(href="/auth/logout")
                    | Logout
              else
                span.nav-item
                  a.button.is-default(href="/")
                    | Home
                span.nav-item
                  a.button(href="/contact")
                    | Contact Us
      .hero-body
        .container.has-text-centered
          .columns.is-vcentered
            .column.is-5
              figure.image.is-4by3
                img.promo-img(src='https://www.elprocus.com/wp-content/uploads/2014/10/10-14-2014-5-54-33-PM.png', alt='Description')
            .column.is-6.is-offset-1
              h1.title.is-2
                | e-PRICE Check Mo!
              a.button.is-large.is-danger(href="/items")
                | View Items

                  

      .hero-foot
        .container
          .tabs.is-centered
            ul
              li
                a(href='http://bulma.io') Made by TEAM 9
              li
                a Copyright 2017 e-Price Check Mo
              li
                a(href='http://unsplash.com') Images via unsplash
    script(async='', type='text/javascript', src='../js/bulma.js')
