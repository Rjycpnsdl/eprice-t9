doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title ROTTEN TOMATOES -Top 100 Movies
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
    link(rel='stylesheet', type='text/css', href='../stylesheets/bulma.css')
    link(rel='stylesheet', type='text/css', href='../stylesheets/landing.css')
  body
    section.hero.is-fullheight.is-dark
      .hero-head
        .container
          nav.nav
            .container
              .nav-left
                a.nav-item(href='/')
                  img(src='https://upload.wikimedia.org/wikipedia/en/thumb/6/6f/Rotten_Tomatoes_logo.svg/1280px-Rotten_Tomatoes_logo.svg.png', alt='Description')
              span.nav-toggle
                span
                span
                span
              .nav-right.nav-menu
              if (user) 
                span.nav-item
                  a.nav-item
                    | You are logged in as #{user.username}
                  a.button.is-default(href="/auth/logout")
                    | Logout
              else
                span.nav-item
                  a.button.is-default(href="/auth/login")
                    | Sign In
                span.nav-item
                  a.button(href="/auth/register")
                    | Sign Up
      .hero-body
        .container
          .columns.is-vcentered
            .column.is-4.is-offset-4
              h1.title
                | Register
              form(role="form", action="/auth/register", method="post")
                label.label(for="username") Username
                p.control
                  input.input#username(type='text', name="username")
                label.label(for="password") Password
                p.control
                  input.input#password(type='password', name="password")
                hr
                p.control
                  button.button.is-primary(type="submit", value="Register") Register
              p.has-text-centered              
                a(href='#') Forgot password
                |               
                a(href='#') Need help?
                  

      .hero-foot
        .container
          .tabs.is-centered
            ul
              li
                a(href='http://bulma.io') Made by TEAM 9
              li
                a Copyright 2017 Rotten Tomatoes
              li
                a(href='http://unsplash.com') Images via unsplash
    script(async='', type='text/javascript', src='../js/bulma.js')
