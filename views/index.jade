doctype html
html(lang='en')
  head
    title e - Price CHECK Mo!
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    script(src='../javascripts/js/jquery.js')
    script(src='../javascripts/js/jquery.glide.js')
    link(rel='stylesheet', href='../stylesheets/css/index-style.css')
    link(rel='stylesheet', href='../stylesheets/css/index-animate.css')
    script(type='text/javascript', src='../javascripts/js/MyJQ.js')
