doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title e - PRICE CHECK MO!
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
    link(rel='stylesheet', type='text/css', href='../stylesheets/bulma.css')
    link(rel='stylesheet', type='text/css', href='../stylesheets/landing.css')
  body
    section.hero.is-fullheight.is-dark
      .hero-head
        .container
          nav.nav
            .container
              .nav-left
                a.nav-item(href='/')
                  img(src='https://scontent.fmnl4-3.fna.fbcdn.net/v/t34.0-12/17274770_774798839343764_632089631_n.png?oh=95dcf49e1acd68243aed035e8130f612&oe=58C6B963', alt='Description')
              span.nav-toggle
                span
                span
                span
              .nav-right.nav-menu
              if (user) 
                span.nav-item
                  a.nav-item
                    | You are logged in as #{user.username}
                  a.button.is-default(href="/auth/logout")
                    | Logout
      .hero-body
        .container
          .columns.is-vcentered
            .column.is-4.is-offset-4
              h1.title
                | Login
              form(role="form", action="/auth/login", method="post")
                label.label(for="username") Username
                p.control
                  input.input#username(type='text', name="username")
                label.label(for="password") Password
                p.control
                  input.input#password(type='password', name="password")
                hr
                p.control
                  button.button.is-primary(type="submit", value="Log In") Log in
      .hero-foot
        .container
          .tabs.is-centered
            ul
              li
                a(href='http://bulma.io') Made by TEAM 9
              li
                a Copyright 2017 e-Price Check Mo
              li
                a(href='http://unsplash.com') Images via unsplash
    script(async='', type='text/javascript', src='../js/bulma.js')
